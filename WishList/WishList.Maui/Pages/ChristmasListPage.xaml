<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WishList.Maui.Pages.ChristmasListPage"
             Title="Christmas List">
    <ContentPage.Content>
        <Grid RowDefinitions="*, Auto" ColumnDefinitions="*" MaximumWidthRequest="400">
            <CollectionView
                Grid.Row="0"
                ItemsSource="{Binding ChristmasItems}"
                SelectionMode="Single"
                SelectedItem="{Binding SelectedChristmasItem}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="10" Padding="10" MaximumWidthRequest="400">
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <Image Source="{Binding PictureUrl}" WidthRequest="50" HeightRequest="50" />
                                <StackLayout HorizontalOptions="FillAndExpand" Spacing="5">
                                    <Label Text="{Binding Title}" FontAttributes="Bold" />
                                    <Grid ColumnDefinitions="*,Auto" HorizontalOptions="FillAndExpand">
                                        <Label Text="{Binding ForPersonName}" Grid.Column="0" VerticalOptions="Center"/>
                                        <Label Text="{Binding PriceString}" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="End"/>
                                    </Grid>
                                    <Label Text="{Binding Description}" FontSize="12" />
                                    <Label Text="{Binding WebsiteUrl}" FontSize="10" TextColor="Blue"/>
                                </StackLayout>
                            </StackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <HorizontalStackLayout Grid.Row="1"
                                   HorizontalOptions="Center">
                <Button Text="People" Margin="10" WidthRequest="180" HorizontalOptions="Center" Command="{Binding GoToPeopleListPageCommand}"/>
                <Button Text="Add new wish" Margin="10" WidthRequest="180" HorizontalOptions="Center" Command="{Binding GoToChristmasDetailPageCommand}"/>
            </HorizontalStackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>