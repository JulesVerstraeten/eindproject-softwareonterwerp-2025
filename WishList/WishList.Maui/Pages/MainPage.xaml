<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WishList.Maui.Pages.MainPage"
             Title="Home">

    <ScrollView MaximumWidthRequest="400">
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button
                Text="Go to wishlist"
                MaximumWidthRequest="200"
                Command="{Binding GoToWishListPageCommand}"/>
            <Button
                Text="Go to christmas list"
                MaximumWidthRequest="200"
                Command="{Binding GoToChristmasListPageCommand}"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
