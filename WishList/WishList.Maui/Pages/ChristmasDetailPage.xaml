<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WishList.Maui.Pages.ChristmasDetailPage"
             Title="Add Christmas Item">
    <ContentPage.Content>
        <VerticalStackLayout MaximumWidthRequest="400" HorizontalOptions="Center">
            <Label Text="Picture URL"/>
            <HorizontalStackLayout>
                <Image WidthRequest="50" Source="{Binding ChristmasItem.PictureUrl}"/>
                <Entry Placeholder="www.book-picture.com" WidthRequest="350" Text="{Binding ChristmasItem.PictureUrl}"/>
            </HorizontalStackLayout>
            
            <Label Text="Title"/>
            <Entry Placeholder="book" Text="{Binding ChristmasItem.Title}"/>
            
            <Label Text="Website URL"/>
            <Entry Placeholder="www.webstore.com/book" Text="{Binding ChristmasItem.WebsiteUrl}"/>
            
            <Picker 
                Title="Select a person"
                ItemsSource="{Binding People}"
                SelectedItem="{Binding SelectedPerson, Mode=TwoWay}"
                ItemDisplayBinding="{Binding FullName}"/>
            
            <Label Text="Price"/>
            <Entry Placeholder="19.99" Text="{Binding PriceInput}"/>
            
            <Label Text="Description"/>
            <Editor AutoSize="TextChanges" HeightRequest="150" Placeholder="my favorite book" Text="{Binding ChristmasItem.Description}"/>
            
            <Label Text="{Binding ChristmasItemError}" TextColor="Red"/>
            
            <HorizontalStackLayout HorizontalOptions="Center">
                <Button Command="{Binding CancelCommand}" Text="Cancel" BackgroundColor="DarkRed" Margin="10" TextColor="Wheat" WidthRequest="150" HorizontalOptions="Center"/>
                <Button Command="{Binding SaveChristmasItemCommand}" Text="Save" BackgroundColor="DarkBlue" Margin="10" TextColor="Wheat" WidthRequest="150" HorizontalOptions="Center"/>
            </HorizontalStackLayout>
            
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>