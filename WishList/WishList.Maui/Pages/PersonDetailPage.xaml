<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WishList.Maui.Pages.PersonDetailPage"
             Title="Person detail">
    <ContentPage.Content>
        <VerticalStackLayout WidthRequest="400" HorizontalOptions="Center">
            <Label Text="First Name"/>
            <Entry Placeholder="John" Text="{Binding PersonToSave.FirstName}"/>
            
            <Label Text="Last Name"/>
            <Entry Placeholder="Doe" Text="{Binding PersonToSave.LastName}"/>
            
            <Label Text="{Binding PersonToSaveError}" TextColor="Red"/>
            
            <HorizontalStackLayout HorizontalOptions="Center">
                <Button Text="Cancel" WidthRequest="150" Margin="10" Command="{Binding CancelCommand}"/>
                <Button Text="Save person" WidthRequest="150" Margin="10" Command="{Binding SavePersonCommand}"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>